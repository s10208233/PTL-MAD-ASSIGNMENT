<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#252525"
    tools:context="sg.edu.np.mad.remembertodo.AboutActivity">

    <TextView
        android:id="@+id/aboutTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:fontFamily="@font/poppins"
        android:text="About Page"
        android:textColor="#FFFFFF"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.046" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/backButton2"
        android:layout_width="200dp"
        android:layout_height="47dp"
        android:background="#151515"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        android:text="Back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.897" />

    <TextView
        android:id="@+id/aboutText"
        android:layout_width="308dp"
        android:layout_height="234dp"
        android:lineSpacingExtra="10sp"
        android:text="'Remember To Do' is a task managing app that allows you to manage your tasks, with the ability to assign a due date and a difficulty level to your tasks, along with the ability of grouping tasks together based on a category like 'Homework' that you can set and assign a colour to said grouping. 'Remember To Do' will also mark the tasks that have passed due dates as well."
        android:textAlignment="center"
        android:textColor="#BFFFFFFF"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.269" />

    <TextView
        android:id="@+id/creditText"
        android:layout_width="332dp"
        android:layout_height="169dp"
        android:layout_marginTop="40dp"
        android:lineSpacingExtra="14sp"
        android:paddingTop="60dp"
        android:text="Music Credits: \nDova - Syndrome: Music Provider Site \nしゃろう / Sharou: Composer Page"
        android:textAlignment="center"
        android:textColor="#BFFFFFFF"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/backButton2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/aboutText" />

</androidx.constraintlayout.widget.ConstraintLayout>